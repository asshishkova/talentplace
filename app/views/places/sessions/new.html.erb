<div class="containter m-5 w-50">
  <% if current_talent %>
    <h3>You are logged in as <%= current_talent.name %> </h3>
  <% else %>
    <h3>Log in as a Place</h3>
    <br>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "purple_pink_btn"%>
      </div>
    <% end %>
    <br>
    <%= render "places/shared/links" %>
  <% end %>
</div>
