<div class = "container">
  <h2 class="mt-5 mb-0 row justify-content-center">Edit my profile</h2>
  <div class = "edit_talent_labels">
    <div>
      <%= simple_form_for @talent do |f| %>
        <%= f.label 'name' %>
        <%= f.text_field :name, class: "edit_talent_label_style" %>
        <%= f.input :photo, as: :file %>
        <%= f.label 'email' %>
        <%= f.text_field :email, class: "edit_talent_label_style" %>
        <%= f.label 'address (city)' %>
        <%= f.text_field :address, class: "edit_talent_label_style" %>
        <%= f.label 'price per hour ($)'%>
        <%= f.text_field :price, class: "edit_talent_label_style" %>
       <div data-controller="genres">
        <%= f.hidden_field :genre_ids, as: :hidden, data: { genres_target: "ids" }, value: @talent.genres.pluck(:id).join(',') %>
        <%= f.label 'genres'%>
          <div class="row">
            <% @all_genres.each do |talent_genre| %>
              <div class="col-2 mr-1 mb-1">
                <%= f.label talent_genre.genre.name %>
                <%= f.text_field :genres,
                    type: :checkbox,
                    checked: talent_genre.persisted?,
                    value: talent_genre.genre.id,
                    data: { genres_target: "genre", action: "change->genres#change" } %>
              </div>
            <% end %>
          </div>
        </div>
        <div class="mt-3">
          <%= f.input :description, as: :text, class: "edit_talent_label_style" %>
        </div>
        <div>
          <%= f.label "youtube link (to the video, not to the channel)"%>
          <%= f.text_field :youtube_link, class: "edit_talent_label_style" %>
          <%= f.label "instagram link" %>
          <%= f.text_field :instagram_link, class: "edit_talent_label_style" %>
          <%= f.label "spotify link" %>
          <%= f.text_field :spotify_link, class: "edit_talent_label_style" %>
        </div>

        <%= f.submit "Submit", class: "mt-3 purple_pink_btn" %>
      <% end %>
    </div>
  </div>
</div>
