<div class="container">
  <div class="container_talent_profil mt-5"  >
    <div class="grid_talent_profile">
      <div>
        <% if @talent.photo.key %>
          <p><%= cl_image_tag @talent.photo.key, class: " shadow talent_profile_pic mt-3" %></p>
        <% end %>
      </div>
      <div class = "profile_talent_info">
        <h3 class = "h3_profile_talent"><%= @talent.name %></h3>
        <% @talent.genres.each do |genre| %>
          <span class="badge rounded-pill bg-dark">#<%= genre.name %></span>
        <% end %>
        <p> <i class="fas fa-map-marker-alt mt-3"></i> <%= @talent.address %></p>
        <p>$<%= @talent.price %> per hour</p>
        <p class = "talent_description_profil"><%= @talent.description %></p>
        <div class = "mt-1 talent_social_network">
          <%= link_to @talent.instagram_link do  %>
          <i class="fab fa-instagram text-link"></i>
          <% end %>
          <%= link_to @talent.spotify_link do  %>
          <i class="fab fa-spotify text-link"></i>
          <% end %>
        </div>
      </div>
        <% if current_place %>
          <div class = "mt-3">
            <%= link_to "Book!", new_talent_booking_path(@talent), class: "purple_pink_btn" %>
          </div>
        <% end %>
      </div>
    <% regexp = (@talent.youtube_link.include? "youtu.be") ? 'https:\/\/youtu.be\/(.+)' : 'https:\/\/www\.youtube\.com\/watch\?v=(.+)&ab_channel=.+' %>
    <% youtube_link = "https://www.youtube.com/embed/#{@talent.youtube_link.gsub(/#{regexp}/, '\1')}" %>
    <% instagram_link = "#{@talent.instagram_link}" %>
    <% spotify_link = "#{@talent.spotify_link}" %>
    <br>
  <div class = "mt-4">
    <h3 class = "h3_youtube_video mt-8"><strong>Portfolio</strong></h3>
    <div>
      <iframe src=<%= youtube_link %>  title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    </div>
  </div>
  <div class="flex-space-between mt-5 mb-5">
    <%= link_to talents_path do %>
      <button class="bad_btn"><i class="fa fa-arrow-left" aria-hidden="true"></i> All Talents</button>
    <% end %>
  </div>
</div>
</div>
